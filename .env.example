# Application Configuration
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080
MANAGEMENT_PORT=8081

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=appdb
DB_USERNAME=appuser
DB_PASSWORD=your_secure_password_here
SPRING_DATASOURCE_URL=jdbc:postgresql://${DB_HOST}:${DB_PORT}/${DB_NAME}

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# JWT Configuration
JWT_SECRET=your_256_bit_secret_key_here_must_be_at_least_32_characters_long_for_security
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Admin Account
ADMIN_PASSWORD=Admin123!

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_HEADERS=*
CORS_EXPOSED_HEADERS=Authorization,Content-Type,X-Total-Count
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# File Upload Configuration
FILE_STORAGE_PATH=./uploads
MAX_FILE_SIZE=10MB
ALLOWED_FILE_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Email Configuration (optional)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=noreply@yourdomain.com
MAIL_FROM_NAME=Your App Name

# Monitoring & Logging
LOG_LEVEL=DEBUG
LOG_PATH=./logs
LOGSTASH_HOST=localhost
LOGSTASH_PORT=5000

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Docker Registry (for CI/CD)
REGISTRY_URL=ghcr.io
REGISTRY_NAMESPACE=yourusername
REGISTRY_USERNAME=yourusername
REGISTRY_PASSWORD=your_github_token

# GitHub Actions (for CI/CD)
GITHUB_TOKEN=your_github_token
CODECOV_TOKEN=your_codecov_token
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Kubernetes Configuration
KUBE_CONFIG_STAGING=base64_encoded_kubeconfig_for_staging
KUBE_CONFIG_PROD=base64_encoded_kubeconfig_for_production

# External Services (optional)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
DATADOG_API_KEY=your_datadog_api_key
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Feature Flags (optional)
FEATURE_NEW_UI=false
FEATURE_BETA_FEATURES=false
FEATURE_MAINTENANCE_MODE=false

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Session Configuration
SESSION_TIMEOUT=1800
SESSION_REMEMBER_ME_DURATION=2592000

# Security Configuration
SECURITY_REQUIRE_HTTPS=false
SECURITY_HSTS_ENABLED=false
SECURITY_FRAME_OPTIONS=SAMEORIGIN
SECURITY_CONTENT_TYPE_OPTIONS=nosniff
SECURITY_XSS_PROTECTION=1; mode=block

# Development Tools
DEV_TOOLS_ENABLED=true
SWAGGER_ENABLED=true
ACTUATOR_ENABLED=true

# Backup Configuration (optional)
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-west-1